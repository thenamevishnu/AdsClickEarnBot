                <!-- Support Links -->
                <div>
                    <h5 class="font-semibold text-white mb-4 sm:mb-5 text-base sm:text-lg tracking-wide">Support</h5>
                    <ul class="space-y-3 sm:space-y-4 text-sm sm:text-base">
                        <li><a href="https://telegram.me/<%= community %>" target="_blank"
