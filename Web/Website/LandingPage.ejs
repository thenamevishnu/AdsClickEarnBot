    <script>
        const counters = { clicks: `<%= total_clicks %>`, users: `<%= total_users %>`, campaigns: `<%= live_campaigns %>`, payouts: `<%= total_payouts %>` };
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    Object.keys(counters).forEach(key => {
                        const el = document.getElementById(key);
                        let val = 0;
                        const inc = counters[key] / 60;
                        const timer = setInterval(() => {
                            val += inc;
                            el.textContent = Math.floor(val).toLocaleString();
                            if (val >= counters[key]) {
                                el.textContent = counters[key].toLocaleString();
                                clearInterval(timer);
                            }
                        }, 25);
                    });
                    observer.disconnect();
                }
            });
        });
        observer.observe(document.getElementById('live-stats'));
    </script>

