                        <a href="https://t.me/<%= bot_username %>" target="_blank"
                            class="hover:text-[#00C2FF] transition duration-200 hover:scale-110 transform">
                            <i class="fab fa-bots"></i>
                        </a>
                        <a href="https://t.me/<%= dev %>" target="_blank"
                            class="hover:text-[#00C2FF] transition duration-200 hover:scale-110 transform">
